<%= render ::LayoutComponent.new(title: '青空文庫') do -%>
<div id="app" class="container mx-auto max-w-5xl py-4">
  <span id="top" name="top">&nbsp;</span>

  <header class="flex items-center justify-between">
    <a href="/" class="md:hidden flex justify-between px-2">
	  <img src="/images/top_logo.png" alt="Logo" class="h-8 w-8" />
	</a>
    <span class="hidden md:flex">&nbsp;</span>
    <nav class="flex justify-end">
      <div class="md:flex justify-end py-3 hidden">
        <div class="px-2">
          ●
          <a class="text-blue-700 hover:text-gray-100 hover:bg-blue-700 visited:text-purple-600 underline"
             href="/index.html">トップ</a>
        </div>
      </div>

      <div class="flex md:hidden items-center space-x-3 py-3 px-3">
        <!--
            <button>
              <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                <path d="M24 6h-24v-4h24v4zm0 4h-24v4h24v-4zm0 8h-24v4h24v-4z"/>
              </svg>
            </button>
            -->
            <button class="text-blue-700 hover:text-gray-100 hover:bg-blue-700 visited:text-purple-600 underline">[メニュー]</button>
      </div>
    </nav>
  </header>

  <h1 class="flex justify-center py-3 text-2xl font-semibold bg-yellow-100 border border-y-gray-500">
    (仮)トップページ
  </h1>


  <p>
    <a href="/index_pages/index_top.html" class="text-blue-700 hover:text-gray-100 hover:bg-blue-700 visited:text-purple-600 underline">
      →総合インデックス
    </a>
  </p>
  <p>
    <a href="/index_pages/index_all.html" class="text-blue-700 hover:text-gray-100 hover:bg-blue-700 visited:text-purple-600 underline">
      →登録全作家インデックス
    </a>
  </p>
  <p>
    <a href="/index_pages/whatsnew1.html" class="text-blue-700 hover:text-gray-100 hover:bg-blue-700 visited:text-purple-600 underline">
      →新着情報
    </a>
  </p>
  <p>
    <a href="/soramoyou/soramoyouindex.html" class="text-blue-700 hover:text-gray-100 hover:bg-blue-700 visited:text-purple-600 underline">
      →そらもよう
    </a>
    &nbsp;最終更新日: <%= latest_news_entry.published_on %>
  </p>
  <div class="px-12 py-5">
    最新公開作品：<%= new_works_published_on %>
    <ol class="list-decimal">
      <% new_works.each do |work|  %>
      <li>
        <%= link_to work.title,
            card_path(person_id: work.card_person_id, card_id: work.id, format: :html),
            class: "text-blue-700 hover:text-gray-100 hover:bg-blue-700 visited:text-purple-600 underline" %>
        <%= work.subtitle %>
      </li>
      <% end %>
    </ol>
  </div>

  <hr class="border-gray-400">

  <footer class="pt-3 pb-14">
    <div>
      <span class="pr-3">
        ●
        <a class="text-blue-700 hover:text-gray-100 hover:bg-blue-700 visited:text-purple-600 underline" href="/index.html">トップ</a>
      </span>
    </div>
  </footer>
</div>
<%- end -%>
